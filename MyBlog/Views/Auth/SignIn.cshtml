@model MyBlog.ViewModels.AuthSignInModel;


@{
    ViewBag.Title = "Sign In";
    Layout = null;
}

<DOCTYPE html>
    <html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <title></title>
        <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    </head>
    <body>
        <div class="container d-flex justify-content-center m-5 ">
            <form class="col-4" asp-controller="Auth" asp-action="SignIn" asp-route-returnUrl="@Context.Request.Query["returnUrl"]" method="post">

                <div class="form-group m-2">
                    <input type="text" asp-for="Username" class="form-control" required placeholder="Username" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group m-2">
                    <input type="password" asp-for="Password" class="form-control" required placeholder="Password" />
                    <span asp-validation-for="Password" class="text-danger "></span>
                </div>
                <div class="form-group form-check m-2">
                    <input type="checkbox" asp-for="IsPersistent" class="form-check-input" />
                    <label class="form-check-label" asp-for="IsPersistent">Remember me</label>
                </div>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group m-2">
                    <input type="submit" value="Sign In" class="btn btn-primary" />
                </div>
                <div class="form-group form-check-inline m-2">
                    <p><h6>Don't have an acccount?</h6><h6><a class="nav-link" type="button " href="/Auth/SignUp">Sign Up</a></h6></p>
                </div>
            </form>
        </div>
    </body>
</html>
   
