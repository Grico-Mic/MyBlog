
@model MyBlog.ViewModels.BlogCreateModel

@{
    ViewBag.Title = "Create";
}

<form asp-controller="MyBlogs" asp-action="Create" method="post">

    <div class="form-group m-2">
        <label class="control-label" asp-for="Title">Title</label>
        <input type="text" asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group m-2">
        <label class="control-label" asp-for="Description">Description</label>
        <textarea type="text" asp-for="Description" class="form-control" cols="20" rows="5"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group m-2">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>
